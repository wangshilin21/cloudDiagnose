/**index.wxss**/
.a{
  width: 46.875rpx;
  height: 20px;
  background: rebeccapurple;
  margin: 0 0 50rpx 50rpx;
}

page {
  background: #f7f7f7;
}

.container {
  min-height: 100vh;
  width: 100%;
  background: #f7f7f7;
  padding-bottom: 60rpx;
}
.label{
  background-color:#f7f7f7;
  height: 350rpx;
  margin-top:100rpx;
}
.header {
  font-size: 28rpx;
  height: 228rpx;
  width: 750rpx;
  font-weight: 300;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
  background: #3683d6;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0px 4px 20px 0px rgba(0, 49, 107, 0.3);
  box-sizing: border-box;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 228rpx;
  z-index: 1;
}
.btn2 button{
  display: flex;
	width: 85%;
  height: 200rpx;
  margin-top:100rpx;
  align-items: center;
  justify-content: center;
  text-align:center;
  border-radius:20px 20px 20px 20px;
  background-color:#3963BC;
}
.btn2 image {
	width: 75rpx;
	height: 75rpx;
	display: inline-block;
	vertical-align: middle;
  margin-top: 50rpx;
}
.btn button{
	width: 58%;
  height: 350rpx;
  background-color: #1648b6;
  border-radius:20px 20px 20px 20px;
  padding-top: 50rpx;
	margin-bottom: 10rpx;
  align-items: center;
  justify-content: center;
  text-align:center;
}
.btn image {
	width: 120rpx;
	height: 120rpx;
	display: inline-block;
	vertical-align: middle;
  margin-top: 10rpx;
}
.header-desc {
  position: absolute;
  z-index: 20;
  font-size: 24rpx;
  margin: 60rpx 0 0 60rpx;
  line-height: 48rpx;

}

.header-name {
  font-size: 50rpx;
  align-items: center;
  justify-content: center;
}

.option {
  padding-top: 20rpx;
  font-size: 36rpx;
  color:white;
  font-family: Arial, Helvetica, sans-serif;

}
.main {
  display: flex;
  flex-wrap: wrap;
  width: 690rpx;
  margin: 0 auto;
  flex-direction: row;
  justify-content: space-between;
}

.checkClientStatus {
  display: flex;
  flex-wrap: wrap;
  width: 690rpx;
  margin: 0 auto;
  flex-direction: row;
  justify-content: center;
}

.shop-card {
  padding: 30rpx 40rpx !important;
  margin-top: 30rpx !important;
  margin-bottom: 30rpx !important;
}

.card-img {
  width: 100rpx !important;
  height: 100rpx !important;
}

.card-title {
  color: #3963bc !important;
}

.picker {
  font-size: 28rpx;
  color: #8c98ae;
  margin-top: 15rpx;
}
